# ====== 全局服务地址 ======
RSSHUB_ORIGIN=http://rsshub:1200
TEI_ORIGIN=http://tei:80
OLLAMA_ORIGIN=http://ollama:11434

# ====== X/Twitter 鉴权（多个 token 逗号分隔可轮换）======
TWITTER_AUTH_TOKEN=replace_with_token1,replace_with_token2
# 可选：第三方 API（需要时设为 1）
TWITTER_THIRD_PARTY_API=0

# ====== Reddit 只读凭据（PRAW）======
REDDIT_CLIENT_ID=your_id
REDDIT_CLIENT_SECRET=your_secret
REDDIT_USER_AGENT=ai-briefing/1.0 by <yourname>

# ====== LLM / API Keys ======
# Google GenAI (Gemini)
GEMINI_API_KEY=your_gemini_key

# ====== Telegram 推送（可选）======
TELEGRAM_BOT_TOKEN=your_telegram_bot_token

# ====== GitHub 备份（可选）======
GITHUB_TOKEN=your_github_pat
GIT_AUTHOR_NAME=AI Briefing Bot
GIT_AUTHOR_EMAIL=bot@example.com

# ====== 日志 ======
LOG_LEVEL=INFO
LOG_DIR=/workspace/logs
LOG_JSON=false