{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "BriefingResult",
  "type": "object",
  "required": ["title", "date", "topics"],
  "additionalProperties": false,
  "properties": {
    "title": {
      "type": "string",
      "minLength": 1
    },
    "date": {
      "type": "string",
      "format": "date-time"
    },
    "topics": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["topic_id", "headline", "bullets"],
        "additionalProperties": false,
        "properties": {
          "topic_id": {
            "type": "string",
            "minLength": 1
          },
          "headline": {
            "type": "string",
            "minLength": 1
          },
          "bullets": {
            "type": "array",
            "minItems": 1,
            "maxItems": 4,
            "items": {
              "type": "object",
              "required": ["text", "url"],
              "additionalProperties": false,
              "properties": {
                "text": {
                  "type": "string",
                  "minLength": 8
                },
                "url": {
                  "type": "string",
                  "format": "uri"
                }
              }
            }
          }
        }
      }
    }
  }
}

