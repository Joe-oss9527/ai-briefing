
{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "BriefingResult",
  "type": "object",
  "required": [
    "title",
    "date",
    "topics"
  ],
  "properties": {
    "title": {
      "type": "string",
      "minLength": 1
    },
    "date": {
      "type": "string",
      "minLength": 10
    },
    "topics": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "topic_id",
          "headline",
          "bullets",
          "links"
        ],
        "properties": {
          "topic_id": {
            "type": "string",
            "minLength": 1
          },
          "headline": {
            "type": "string",
            "minLength": 1
          },
          "bullets": {
            "type": "array",
            "minItems": 1,
            "maxItems": 4,
            "items": {
              "type": "string",
              "minLength": 8
            }
          },
          "links": {
            "type": "array",
            "items": {
              "type": "string",
              "minLength": 8
            }
          }
        }
      }
    }
  }
}

